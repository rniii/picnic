{
  "manifest_version": 2,
  "name": "Picnic for Mastodon",
  "version": "0.1.0",
  "permissions": ["tabs", "scripting", "webRequest", "webRequestBlocking"],
  "optional_permissions": ["https://*/*"],
  "browser_action": {
    "default_title": "Picnic",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
